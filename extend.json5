{
  id: "futureboard@kext_extend",
  name: "$$futureExtend_name",
  color1: "#ED6A47",
  color2: "#BF5235",
  color3: "#B83E1D",
  lib: {
    import: 'from kwatch import *'
  },
  instance: {
    kclock: 'KClock()'
  },
  blocks:[
    "## $$futureboard_title_watch",
    {
      opcode: 'getTime',
      blockType: "reporter",
      text: "$$futureExtend_getTime",
      instance: "kclock",
      pycode: "kclock.getTime('[TYPE]')",
      arguments: {
        TYPE: {
          type: "string",
          menu: 'TIMEFORMAT_TEXT',
          defaultValue: 'all',
        }
      },
    },
    {
      opcode: 'resetTime',
      blockType: "command",
      text: "$$futureExtend_resetTime",
      instance: "kclock",
      pycode: 'kclock.setTime(([Y],[M],[D],[W],[H],[m],[S]))',
      arguments: {
        Y: {
          type: "number",
          defaultValue: '2021',
        },
        M: {
          type: "number",
          defaultValue: '1',
        },
        D: {
          type: "number",
          defaultValue: '1',
        },
        W: {
          type: "string",
          menu: 'WEEK',
          defaultValue: '5'
        },
        H: {
          type: "number",
          defaultValue: '1',
        },
        m: {
          type: "number",
          defaultValue: '1',
        },
        S: {
          type: "number",
          defaultValue: '1',
        },
      }
    },
    {
      opcode: 'controlTime',
      blockType: "command",
      text: "$$futureExtend_controlTime",
      instance: "kclock",
      pycode: "kclock.modeSet(state='[TYPE]')",
      arguments: {
        TYPE: {
          type: "string",
          menu: 'PLAYSTATE',
          defaultValue: 'pause'
        }
      }
    },
    {
      opcode: 'refreshTime',
      blockType: "command",
      text: "$$futureExtend_refreshTime",
      instance: "kclock",
      pycode: 'kclock.refreshTime([TIMEZONE])',
      arguments: {
        TIMEZONE: {
          type: "string",
          menu: 'TIMEZONE',
          defaultValue: '8'
        }
      }
    },
    "## $$futureboard_title_intercom",
    {
      opcode: 'intercomSet',
      blockType: "command",
      text: "$$futureExtend_intercomSet",
      pycode: 'intercom.setchannel([CHANNEL])',
      arguments: {
        CHANNEL: {
          type: "slider",
          defaultValue: '1',
          min: 1,
          max: 13
        }
      }
    },
    {
      opcode: 'intercomSend',
      blockType: "command",
      text: "$$futureExtend_intercomSend",
      pycode: 'intercom.intercomSend([SEC])',
      arguments: {
        SEC: {
          type: "slider",
          defaultValue: 3,
          max: 15,
          min: 3
        },
      }
    },
    {
      opcode: 'soundReceive',
      blockType: "command",
      text: "$$futureExtend_soundReceive",
      pycode: 'intercom.play()',
    },
    "## $$futureboard_title_weather",
    {
      opcode: 'gdKey',
      blockType: "command",
      text: "$$futureExtend_gdKey",
      pycode: "weather = Weather('[KEY]')",
      arguments: {
        KEY: {
          type: "string",
          defaultValue: 'key'
        }
      }
    },
    {
      opcode: 'weatherCity',
      blockType: "command",
      text: "$$futureExtend_weatherCity",
      pycode: 'weather.getActual([CITY])',
      arguments: {
        CITY: {
          type: "string",
          defaultValue: '深圳'
        }
      }
    },
    {
      opcode: 'weatherDate',
      blockType: "command",
      text: "$$futureExtend_weatherDate",
      pycode: 'weather.getForecast([CITY],[DAY])',
      arguments: {
        CITY: {
          type: "string",
          defaultValue: '深圳'
        },
        DAY: {
          type: "slider",
          defaultValue: '3',
          max: 3,
          min: 1
        },
      }
    },
    {
      opcode: 'weatherCurent',
      blockType: "reporter",
      text: "$$futureExtend_weatherCurent",
      pycode: 'weather.[TYPE]()',
      arguments: {
        TYPE: {
          type: "number",
          defaultValue: 'condition',
          menu: 'WEATHER_NORMAL'
        },
      }
    },
    {
      opcode: 'weatherFuture',
      blockType: "reporter",
      text: "$$futureExtend_weatherFuture",
      pycode: 'weather.[TYPE]()',
      arguments: {
        TYPE: {
          type: "number",
          defaultValue: 'dayweather',
          menu: 'WEATHER_PREDIT'
        },
      }
    },
    "## $$futureboard_title_audio",
    {
      opcode: 'soundSave',
      blockType: "command",
      text: "$$futureExtend_soundSave",
      pycode: "au.savewav('[WAVFILENAME]', [SECOND])",
      arguments: {
        WAVFILENAME: {
          type: "string",
          defaultValue: 'file name'
        },
        SECOND: {
          type: "slider",
          defaultValue: '3',
          max: 15,
          min: 3
        }
      }
    },
    {
      opcode: 'soundPlay',
      blockType: "command",
      text: "$$futureExtend_soundPlay",
      pycode: "au.playwav('[WAVFILENAME]')",
      arguments: {
        WAVFILENAME: {
          type: "string",
          defaultValue: 'filename'
        }
      }
    },
  ],
  menus: {
    TIMEFORMAT_TEXT: [
      { text: "$$futureExtend_menu_timeformat_all", value: 'all' },
