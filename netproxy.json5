{
  libs: {
    "ntptime": {
      import: 'import ntptime'
    },
    rtc: {
      import: 'from machine import RTC',
      instance: 'RTC()'
    }
  },
  blocks: [
    {
      opcode: 'netproxy',
      blockType: 'command',
      text: '$$futureboard_ntp_proxy',
      pycode: "ntptime.host=[HOST]",
      arguments: {
        HOST: {
          type: 'string',
          defaultValue: 'ntp.aliyun.com',
        },
      },
    },
    {
      opcode: 'ntpsync',
      blockType: 'command',
      text: '$$futureboard_ntp_sync',
      pycode: 'ntptime.settime(int([TIMEZONE]))',
      arguments: {
        TIMEZONE: {
          type: 'string',
          defaultValue: 8,
          menu: 'TIMEZONE',
        },
      },
    },
    {
      opcode: 'ntpgettime',
      blockType: 'reporter',
      text: '$$futureboard_ntp_gettime',
      pycode: "rtc.datetime()[int([TIMEFORMAT])]",
      arguments: {
        TIMEFORMAT: {
          type: 'string',
          defaultValue: 0,
          menu: 'TIMEFORMAT',
        },
      },
    },
    '---',

    "## $$futureboard_title_onenet",
    {
      opcode: 'onenetconnect',
      blockType: 'command',
      text: '$$futureboard_onenet_connect',
      micropy: {
        import: 'import onenet'
      },
      pycode: "onenet = onenet.OneNet([ID], [KEY])",
      arguments: {
        ID: {
          type: 'string',
          defaultValue: 'id',
        },
        KEY: {
          type: 'string',
          defaultValue: 'key',
        },
      },
    },
    {
      opcode: 'onenetwrite',
      blockType: 'command',
      text: '$$futureboard_onenet_write',
      pycode: "onenet.write([KEY], [VALUE])",
      arguments: {
        KEY: {
          type: 'string',
          defaultValue: 'key',
        },
        VALUE: {
          type: 'string',
          defaultValue: 'value',
        },
      },
    },
    {
      opcode: 'onenetread',
      blockType: 'reporter',
      text: '$$futureboard_onenet_read',
      pycode: "onenet.read([KEY])",
      arguments: {
        KEY: {
          type: 'string',
          defaultValue: 'key',
        },
      },
    },
    '---'
  ],
}